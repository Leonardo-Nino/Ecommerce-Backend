<div class="container">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-dark text-white">
                        <div class="card-body p-4 text-center">
                            <h2 class="fw-bold mb-3">Enter your email to change password</h2>
                            <h3 class="mb-4">You will receive an email with more instructions</h3>
                            <form action="/api/resetPass/sendLink" method="post">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email:</label>
                                    <input type="text" class="form-control border border-dark" id="email" name="email"
                                        required>
                                </div>
                                <button type="submit"
                                    class="btn btn-outline-light btn-lg rounded-pill mt-3 mb-3 px-3">Send Link</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>