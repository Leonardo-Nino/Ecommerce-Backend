<div class="ps-2">
    <h2>Bienvenido : {{user.first_name}} </h2>
    <p>Email : {{user.email}} </p>
    <p>Rol: {{user.role}} </p>
    <p>Cart : {{user.cart}} </p>
    <p>Last connection: {{user.last_connections}} </p>
</div>
<form action="/api/session/logout" method="get">
    <input class="btn btn-light ps-3 " type="submit" value="Logout">
</form>


<h1 class="ps-2">All products</h1>
<div class="d-flex flex-wrap">
    {{#each products}}
    <div class='col-md-3 mx-2 my-3 r'>
        <div class="card w-100 mt-5">
            <div class="card-header text-white bg-dark">
                {{title}}
            </div>
            <div class="card-body">
                <img src={{thumbnail}}alt="Products img" class='card-img'>
                <br />
                Price: â‚¬ {{price}}
                <br />
                Stock : {{stock}}
            </div>
            <div class="card-body pb-0 pt-2">
                <form action="/api/products/{{_id}}" method="get">
                    <button class="btn btn-outline-primary btn-sm mb-3 px-5" type="submit">Product details</button>
                </form>
            </div>

        </div>
    </div>
    {{/each}}

</div>