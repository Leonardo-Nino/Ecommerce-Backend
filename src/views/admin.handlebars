<h1>PANEL DE ADMINISTRADOR</h1>



<h2>Administracion de user</h2>

<div class="d-flex flex-wrap">
    {{#each users}}
    <div class='col-md-3 mx-2 my-3 r'>
        <div class="card w-100 mt-5">
            <div class="card-header text-white bg-dark">
                {{first_name }} {{last_name}}
            </div>
            <div class="card-body">
                User ID: {{_id }}
                <br />
                Role: {{role}}
                <br />
                Last connection : {{last_connections}}
                <br />
            </div>
            <div class="card-body">
                <form action="/api/user/primium/{{_id}}" method="post">
                    <button class="btn btn-outline-dark btn-sm mb-3 px-5" type="submit">Change status
                        (user/premium)</button>
                </form>
            </div>
            <div class="card-body">
                <form action="/api/user/deleteone/{{_id}}" method="post">
                    <button class="btn btn-outline-danger btn-sm mb-3 px-5" type="submit">DELETE USER</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}